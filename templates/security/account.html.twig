{% extends 'navlinks_ready_base.html.twig' %}

{% block navLinks %}
    <li><a href="{{ path('article_list') }}">back to the list</a></li>
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.currentPassword) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}

    <button type="submit">Register!</button>
    {{ form_end(form) }}
{% endblock %}